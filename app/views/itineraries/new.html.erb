<h1>New itinerary</h1>

<% javascript 'dynamic_hotels' %>

<%= error_messages_for :itinerary %>

<% form_for(@itinerary) do |f| %>
  <p>
    <b>Itinerary type</b><br />
    <%= f.text_field :itinerary_type %>
  </p>

	<p>
	  <label for="itinerary_hotel_city">Country:</label>
	  <%= f.collection_select :hotel_city, Hotel.find(:all), :city, :city, :prompt => "Select a City" %>
	</p>
	<p id="hotel_field">
	  <label for="itinerary_hotel_id">State or Province:</label>
	  <%= f.collection_select :hotel_id, Hotel.find(:all), :id, :name, :prompt => "Select a State" %>
	</p>

  <p>
    <b>Departing</b><br />
    <%= f.text_field :departing %>
  </p>

  <p>
    <b>Arriving</b><br />
    <%= f.text_field :arriving %>
  </p>

  <p>
    <b>Arrival date</b><br />
    <%= f.date_select :arrival_date %>
  </p>

  <p>
    <b>Departure date</b><br />
    <%= f.date_select :departure_date %>
  </p>

  <p>
    <b>Operator</b><br />
    <%= f.text_field :operator %>
  </p>

  <p>
    <b>Booking reference</b><br />
    <%= f.text_field :booking_reference %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', itineraries_path %>
