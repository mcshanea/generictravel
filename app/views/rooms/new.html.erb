<style>.logout {  display: none; } .main_nav {  display: none; }</style>

<h1>New room</h1>

<% @room.hotel_id = params[:hotel_id] %>

<% form_for(@room) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :room_type %><br />
    <%= f.text_field :room_type %>
  </p>

  <%= f.hidden_field :hotel_id %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

	<p><%= add_rate_link "Add a rate" %></p>

	<div id="new_rate"></div>

	<%= f.hidden_field :hotel_id %>

  <p>
    <%= f.submit "Create", :onclick => 'window.close();' %>
  </p>
<% end %>
