<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Room type</th>
    <th>Hotel</th>
    <th>Rate</th>
    <th>Description</th>
  </tr>

<% for room in @rooms %>
  <tr>
    <td><%=h room.room_type %></td>
    <td><%=h room.hotel_id %></td>
    <td><%=h room.rate %></td>
    <td><%=h room.description %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

