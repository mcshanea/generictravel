<h1>New search</h1>

<% form_for(@search) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :departing %><br />
    <%= f.text_field :departing %>
  </p>
  <p>
    <%= f.label :arriving %><br />
    <%= f.text_field :arriving %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :from %><br />
    <%= f.date_select :from %>
  </p>
  <p>
    <%= f.label :to %><br />
    <%= f.date_select :to %>
  </p>
  <p>
    <%= f.label :client_id %><br />
    <%= f.select :client_id, get_client_select %>
  </p>
  <p>
    <%= f.label :agent_id %><br />
    <%= f.select :agent_id, get_agent_select %>
  </p>
  <p>
    <%= f.label :service_id %><br />
    <%= f.select :service_id, get_service_select %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= render :partial => @searches %>

<%= link_to 'Back', searches_path %>
