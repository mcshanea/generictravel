<style>.logout {  display: none; } .main_nav {  display: none; }</style>

<h1>New location</h1>

<%= error_messages_for :location %>

<% @location.hotel_id = params[:hotel_id] %>
<% @location.company_id = params[:company_id] %>

<% form_for(@location) do |f| %>
  <p>
    <b>Address</b><br />
    <%= f.text_area :address %>
  </p>

  <p>
    <b>Post code</b><br />
    <%= f.text_field :post_code %>
  </p>

  <p>
    <b>Country</b><br />
    <%= f.text_field :country %>
  </p>

	<%= f.hidden_field :hotel_id %>

  <p>
    <%= f.submit "Create", :onclick => 'window.close();' %>
  </p>
<% end %>
