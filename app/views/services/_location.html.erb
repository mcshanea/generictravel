<div class="location">
<% fields_for_location(location) do |f| %>
  <p>
    <b>Address</b><br />
    <%= f.text_area :address %>
  </p>

  <p>
    <b>Post code</b><br />
    <%= f.text_field :post_code %>
  </p>

  <p>
    <b>Country</b><br />
    <%= f.text_field :country %>
  </p>

  <%= link_to_function "remove", "this.up('.location').remove()" %>

<% end %>
  </div>